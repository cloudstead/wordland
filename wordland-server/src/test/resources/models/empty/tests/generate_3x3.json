[
  {
    "comment": "login as superuser",
    "include": "parts/login_superuser"
  },

  {
    "comment": "generate many combinations of 3x3 rooms",
    "request": {
      "uri": "boards/3x3/generateRooms",
      "entity": {
        "symbolSets": [
          {"name": "standard", "children": {"SymbolDistribution": [{"name": "easy"}]}},
          {"name": "standard", "children": {"SymbolDistribution": [{"name": "standard"}]}},
          {"name": "standard", "children": {"SymbolDistribution": [{"name": "hard"}]}},
          {"name": "standard", "children": {"SymbolDistribution": [{"name": "insane"}]}}
        ],
        "maxPlayers": [2, 3, 4, 5],
        "maxLetterDistances": [2, 5, 20]
      }
    }
  },

  {
    "comment": "verify there are now 4 rooms with 3x3 board",
    "request": {
      "uri": "rooms"
    },
    "response": {
      "store": "rooms",
      "check": [
        {"condition": "rooms.length >= 48"},
        {"condition": "find(rooms, 'settings.symbolDistribution.name', 'insane') != null"}
      ]
    }
  }

]