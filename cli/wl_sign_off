#!/bin/bash

SCRIPT="${0}"
SCRIPT_DIR=$(cd $(dirname ${SCRIPT}) && pwd)
. ${SCRIPT_DIR}/_wl_common

if [[ ! -f ${SESSION_JSON} ]] ; then
  die "$(translate_message msg_notLoggedIn)"
fi

name="$(session_email)"
if [[ -z "${name}" ]] ; then
  name="$(session_name) $(translate_message msg_user_anonymousFlag)"
fi

wl_get ${WL_API}/auth/logout
rm -f ${SESSION_JSON} ${CURRENT_ROOM} ${CURRENT_ROOM}.json
echo "$(translate_message msg_signoff_success) ${name}"
