#!/bin/bash

SCRIPT="${0}"
SCRIPT_DIR=$(cd $(dirname ${SCRIPT}) && pwd)
. ${SCRIPT_DIR}/_wl_common

VERBOSE="${1}"
if [[ ! -z "${VERBOSE}" && "${VERBOSE}" == "-v" ]] ; then
  VERBOSE=1
  shift
else
  VERBOSE=0
fi
ROOM="$(echo ${1} | tr -d '"')"

if [[ -z "${ROOM}" ]] ; then
  if [[ ${VERBOSE} -eq 1 ]] ; then
    wl_get ${WL_API}/rooms
    exit $?
  fi

  echo "$(translate_message msg_availableRooms)"
  IFS=$'\n'
  i=1
  rooms="$(wl_get ${WL_API}/rooms | jq .[].name)"
  for room in ${rooms} ; do
    echo "  ${i}  : $(echo ${room} | tr -d '"')"
    i=$(expr ${i} + 1)
  done
  echo
  echo "$(translate_message msg_chooseRoom)"
  echo ; echo -n "$(translate_message msg_choose_room_prompt) "

  while read line ; do
    if [[ -z "${line}" ]] ; then
      continue
    fi
    if [[ "${line}" =~ ^[1-9][0-9]*$ ]]; then
      i=1
      for room in ${rooms} ; do
        if [[ ${i} -eq ${line} ]] ; then
          # Re-run this command with room name
          exec ${0} "${room}"
        fi
        i=$(expr ${i} + 1)
      done
      error "1 $(translate_message err_room_notFound): ${line}"
    else
      if [[ "$(wl_exists "$(room_dir ${ROOM})")" != "true" ]] ; then
        error "2 $(translate_message err_room_notFound): ${line}"
      else
        # Re-run this command with room name
        exec ${0} "${line}"
      fi
    fi
    echo ; echo -n "$(translate_message msg_choose_room_prompt) "
  done

else
  if [[ ${VERBOSE} -eq 1 ]] ; then
    wl_get ${WL_API}/rooms/${ROOM}
    exit $?
  fi

  if [[ "$(wl_exists "$(room_dir ${ROOM})")" != "true" ]] ; then
    error "$(translate_message err_room_notFound): ${ROOM}"
    exec ${SCRIPT_DIR}/wl_rooms
  fi

  room=$(wl_get ${WL_API}/rooms/${ROOM})

  echo ; echo "$(translate_message msg_roomDetails) ${ROOM}"
  board=$(json_val "${room}" settings.board.name)
  width=$(json_val "${room}" settings.board.settings.width)
  length=$(json_val "${room}" settings.board.settings.length)
  maxPlayers=$(json_val "${room}" settings.maxPlayers)
  distribution=$(json_val "${room}" settings.symbolDistribution.name)

  if [[ -z "${width}" || "${width}" == "null" ]] ; then
    width="$(translate_message label_infinity)"
  fi
  if [[ -z "${length}" || "${length}" == "null" ]] ; then
    length="$(translate_message label_infinity)"
  fi

  if [[ ! -z "${board}" ]] ; then
    echo "  $(translate_message label_board_name): ${board}"
  fi
  echo "  $(translate_message label_board_dimensions): ${width} x ${length}"
  echo "  $(translate_message label_symbol_distribution): ${distribution}"
  if [[ ! -z "${maxPlayers}" ]] ; then
    echo "  $(translate_message label_maxPlayers): ${maxPlayers}"
  fi

  echo "$(translate_message msg_roomOptions)"
  echo ; echo -n "$(room_prompt)"
  while read line ; do
    case ${line} in
      N|n)
        ${SCRIPT_DIR}/wl_join "${ROOM}"
      ;;
      R|r)
        exec ${0}
      ;;
      V|v)
        ${0} -v "${ROOM}"
      ;;
      '')
        ${0} "${ROOM}"
      ;;
      Q|q)
        exit 0
      ;;
    esac
  done
fi
